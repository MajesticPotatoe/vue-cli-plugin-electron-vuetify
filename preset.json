{
  "bare": true,
  "useConfigFiles": true,
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-eslint": {
      "config": "standard",
      "lintOn": ["save"]
    },
    "@vue/cli-plugin-router": {
      "historyMode": true
    },
    "@vue/cli-plugin-vuex": {},
    "vue-cli-plugin-vuetify": {
      "preset": "configure",
      "replaceComponents": false,
      "useTheme": false,
      "useCustomProperties": false,
      "iconFont": "mdi",
      "installFonts": false,
      "useAlaCarte": true,
      "usePolyfill": true,
      "locale": "en"
    },
    "vue-cli-plugin-electron-builder": {
      "version": "2.0.0-rc.5",
      "electronBuilder.electronVersion" : "^9.0.0"
    },
    "vue-cli-plugin-electron-vuetify": {
      "install": true
    },
    "@vuetify/vue-cli-plugin-presets": {
      "version": "0.1.0-alpha.6",
      "configuration": "base"
    }
  },
  "cssPreprocessor": "dart-sass",
  "configs": {
    "vue": {
      "devServer": {
        "disableHostCheck": true
      }
    }
  }
}